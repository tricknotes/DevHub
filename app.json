{
  "name": "DevHub",
  "description": "Chat & share memo for deverolpers.",
  "repository": "https://github.com/volpe28v/DevHub",
  "logo": "https://raw.githubusercontent.com/volpe28v/DevHub/master/static/apple-touch-icon.png",
  "keywords": ["node", "socket.io", "chat"],
  "addons": [
    "mongolab"
  ],
  "env": {
    "BASIC_AUTH_USER": {
      "required": false
    },
    "BASIC_AUTH_PASS": {
      "required": false
    },
    "GRIDFS": {
      "value": "true"
    },
    "FORCE_SSL": {
      "required": false,
      "value": "true"
    }
  }
}
